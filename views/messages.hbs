<head>
	<link rel="stylesheet" href="nav.css">
    <link rel="stylesheet" href="message.css">
	<script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
  <title>Admin Dashboard</title>
</head>

<div class="wrapper">
    <div class="sidebar">
         <h4> <a class="text-decoration-none" href="/admin-dashboard">Admin Dashboard</a></h4>
        <ul>
            <li><a href="/add"><i class="fas fa-plus"></i>Add Product</a></li>
            <li><a href="/my-products"><i class="fas fa-shopping-cart"></i>Products</a></li>
            <li><a href="/messages"><i class="fas fa-comment"></i>Messages</a></li>
            <li><a href="/orders"><i class="fas fa-shopping-bag"></i>Orders</a></li>
            <li class="logout-btn"><a class="btn btn-outline-danger" href="/logout">Logout</a></li>
        </ul> 
    </div>
    <div class="main_content">
        <div class="header">Messages!</div>  
        <div class="info">
            

{{#if contacts.length}}
<div class="package">
    	{{#each contacts}}
      <div class="package-container">
<div class="package2"><p class="text">{{name}}</p>
            <p class="message">{{message}}</p>
               <div class="email">
                    <p>Email:</p>
            <p>{{email}}</p>
            <form action="/delete-message/{{_id}}" method="post">
                <button class="btn btn-outline-danger mt-10">Delete</button>  
            </form>
                
               </div> 
            </div>
      </div>
        

        {{/each}}
</div>
{{else}}
<p>No Messages!</p>
{{/if}}


 


      </div>
    </div>
</div>