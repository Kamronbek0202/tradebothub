<body class="sub_page">

  <div class="hero_area">

    <div class="hero_bg_box">
      <div class="bg_img_box">
        <img src="hero-bg.png" alt="">
      </div>
    </div>

    <!-- header section strats -->
         <header class="header_section">
      <div class="container-fluid">
        <nav class="navbar navbar-expand-lg custom_nav-container ">
          <a class="navbar-brand" href="/">
            <span>
              TradeBotHub
            </span>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class=""> </span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav  ">
              <li class="nav-item">
                <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/about"> About</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/product">Products</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/contact">Contact</a>
              </li>
           {{#if token}} 
              <li class="nav-item">
                <a class="nav-link btn btn-outline-danger" href="/logout">Logout</a>
               </li> 
              {{else}} 
            {{#if isLogin}}
            {{!-- Active Button --}}
                <li class="nav-item">
                <a class="nav-link btn btn-outline-primary active" href="/login">Login</a>
               </li>
          {{else}}
              <li class="nav-item">
                <a class="nav-link btn btn-outline-primary" href="/login">Login</a>
               </li>
          {{/if}}
          {{!-- Active Button --}}
           {{/if}}  
            </ul>
          </div>
        </nav>
      </div>
    </header>
    <!-- end header section -->
  </div>

{{#if products.length}}
<div class="__card">
  {{#each products}}
    <div class="card">  
      <div class="content">
        <div class="title">{{title}}</div>
        <div class="price">{{price}}$</div>
        <div class="description">{{description}}</div>
      </div>
      <button onclick="openModal('{{id}}')">Buy now</button>
    </div>    
    <!-- Modal for {{title}} -->
    <div id="myModal{{id}}" class="modal">
      <div class="modal-content">
        <div class="form-box">
          <form class="form" action="/buy-product/{{_id}}" method="post">
            <span class="title">Buy {{title}}</span>
            <span class="subtitle">Enter one of the social networks below to get the bot you want to buy</span>
            <div class="form-container"> 
              <input type="text" class="input" name="telegram" placeholder="Telegram">
              <input type="text" class="input" name="facebook" placeholder="Facebook">
              <input type="text" class="input" name="whatsapp" placeholder="WhatsApp">
            </div>
            <button>Send</button>
          </form>
          <div class="form-section">
            <p>Don't you have any? <a href="/contact">Contact</a> </p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
{{else}}
<p>No Product!</p>
{{/if}}




  <!-- info section -->

  <section class="info_section layout_padding2">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-lg-3 info_col">
          <div class="info_detail">
            <h4>
              Info
            </h4>
            <p>
TradeBotHub is your go-to platform for automated trading solutions. Whether you're a beginner looking to streamline your trading process or an experienced trader seeking advanced strategies, TradeBotHub has the tools and expertise to help you succeed in the financial markets.
            </p>
          </div>
        </div>
        <div class="col-md-6 col-lg-2 mx-auto info_col">
          <div class="info_link_box">
            <h4>
              Links
            </h4>
            <div class="info_links">
              <a class="active" href="/">
                Home
              </a>
              <a class="" href="/about">
                About
              </a>
              <a class="" href="/product">
                Product
              </a>
               <a class="" href="/contact">
                Contact Us
              </a>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3 info_col ">
          <h4>
           Subscribe to our newsletter for the latest news, updates, and special offers.
          </h4>
         <form action="/subscribe" method="post">
            <input type="email" name="email" placeholder="Enter email" />
            <button type="submit">
              Subscribe
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
  <!-- end info section -->

  <!-- footer section -->
  <section class="footer_section">
    <div class="container">
      <p>
        &copy; <span id="displayYear"></span> All Rights Reserved By OFFCODEV
      </p>
    </div>
  </section>
  <!-- footer section -->

